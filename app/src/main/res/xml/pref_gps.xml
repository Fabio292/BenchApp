<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:defaultValue="@string/default_gps_requests_number"
        android:inputType="number"
        android:key="gps_requests_number"
        android:selectAllOnFocus="true"
        android:title="Number of GPS location requests" />

    <EditTextPreference
        android:defaultValue="@string/default_gps_request_timeout"
        android:inputType="number"
        android:key="gps_request_timeout"
        android:selectAllOnFocus="true"
        android:title="Timeout for each GPS request (in seconds)" />

</PreferenceScreen>
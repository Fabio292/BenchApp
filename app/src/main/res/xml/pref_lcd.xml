<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:defaultValue="@string/default_lcd_step_duration"
        android:inputType="number"
        android:key="lcd_step_duration"
        android:selectAllOnFocus="true"
        android:title="Duration of step (in ms)" />

    <EditTextPreference
        android:defaultValue="@string/default_lcd_step_increment"
        android:inputType="number"
        android:key="lcd_step_increment"
        android:selectAllOnFocus="true"
        android:title="Brightness increment for each step (0-255)" />

    <SwitchPreference
        android:key="lcd_color_test"
        android:title="Test only colour, not luminosity" />


</PreferenceScreen>